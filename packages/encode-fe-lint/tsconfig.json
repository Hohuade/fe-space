{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES5",
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "declaration": true,
    "downlevelIteration": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src"]
}
